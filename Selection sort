#include <iostream>
using namespace std;
int main()
{
   int size;
   cout<<"enter the size of the array:"<<endl;
   cin>>size;
   int arr[size];
   for (int i=0;i<size;i++){
       cout<<"enter the element of array:"<<endl;
       cin>>arr[i];
   }
   int minid=0;
   for (int i=0;i<=size-2;i++){
       minid=i;
       for(int z=i+1;z<=size-1;z++){
           if(arr[minid]>arr[z]){
               minid=z;
           }
       }
       if(minid!=i){
           swap(arr[minid],arr[i]);
       }
   }
   for (int i=0;i<size;i++){
       cout<<arr[i]<<" ";
   }
   
   

    return 0;
}
