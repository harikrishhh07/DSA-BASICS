class Solution {
public:
    int pivotInteger(int n) {
        long long sum = static_cast<long long>(n) * (n + 1) / 2;
        long long x = static_cast<long long>(sqrt(sum));
        if (x * x == sum) {
            return static_cast<int>(x);
        } else {
            return -1;
        }
    }
};
