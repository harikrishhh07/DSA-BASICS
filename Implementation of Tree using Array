#include <stdio.h>
#define MAX 10

int tree[MAX];

void inittree() {
    for (int i = 0; i < MAX; i++) {
        tree[i] = -1;
    }
}

void createroot(int key) {
    if (tree[0] != -1) {
        printf("Root already exists!\n");
        return;
    }
    tree[0] = key;
}

void createleft(int key, int parent) {
    int left = 2 * parent + 1;
    if (tree[parent] == -1) {
        printf("Parent doesn't exist!\n");
        return;
    }
    if (left >= MAX) {
        printf("Out of bounds (no space for left child)\n");
        return;
    }
    tree[left] = key;
}

void createright(int key, int parent) {
    int right = 2 * parent + 2;
    if (tree[parent] == -1) {
        printf("Parent doesn't exist!\n");
        return;
    }
    if (right >= MAX) {
        printf("Out of bounds (no space for right child)\n");
        return;
    }
    tree[right] = key;
}

void display() {
    printf("\nTree array representation:\n");
   for (int i = 0; i < MAX; i++) {
        if (tree[i] != -1)
            printf("%d ", tree[i]);
        else
            printf("_ ");
    }
    printf("\n");
}

int main() {
    inittree();
    createroot(0);
    createleft(1, 0);
    createright(2, 0);
    createleft(3, 1);
    createright(4, 1);
    display();
    return 0;
}
